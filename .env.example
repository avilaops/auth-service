# üîê Auth Service Environment Variables

# MongoDB
MONGODB_URI=mongodb://arkana:changeme@mongodb:27017/auth?authSource=admin
MONGO_DB_NAME=auth

# Redis
REDIS_URL=redis://:changeme@redis:6379/0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # 1 hour in seconds
REFRESH_TOKEN_EXPIRATION=2592000  # 30 days in seconds

# SMTP (Email)
SMTP_HOST=mail.avila.inc
SMTP_PORT=587
SMTP_USER=noreply@avila.inc
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@avila.inc
SMTP_TLS=true

# Application
APP_NAME=√Åvila Auth Service
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false

# CORS
CORS_ORIGINS=https://arkana.avila.inc,https://portal.avila.inc
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
